<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@color/seperator_white"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:background="@color/white"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivReqLogo"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|top"
                    android:scaleType="centerInside"
                    android:src="@drawable/elite_placeholder" />

                <TextView
                    android:id="@+id/txtPrdName"
                    style="@style/TextViewStyle.Large"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/txtAmnt"
                    android:layout_toRightOf="@+id/ivReqLogo"
                    android:text="Customer Name wwwwe ce"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAmnt"
                    style="@style/TextViewStyle.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"

                    android:text="50"
                    android:textColor="@color/tab_color"
                    android:textStyle="bold" />


            </RelativeLayout>


            <!--<View-->

            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/txtDate"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:background="@color/seperator"></View>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:weightSum="100">

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Request Date:" />

                <TextView
                    android:id="@+id/txtDate"
                    style="@style/TextViewStyle.MediumBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Dec 17 2016"
                    android:textColor="@color/black"
                    android:textStyle="italic" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/txtStatus"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textOrder"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Request ID:" />

                    <TextView
                        android:id="@+id/txtOrderID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textCustomer"
                        android:layout_marginLeft="5dp"
                        android:text="Product"

                        android:textColor="@color/black" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txtStatus"
                    style="@style/TextViewStyle.MediumBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textCustomer"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:text="Paid"
                    android:textColor="@color/green_descent"
                    android:textStyle="bold"

                    />

            </RelativeLayout>


            <View
                android:id="@+id/viewlayout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtDate"
                android:layout_marginTop="5dp"
                android:background="@color/seperator"></View>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewlayout"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:text="Status:"

                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


                    <TextView
                        android:id="@+id/txtPayment"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewlayout"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/green_descent"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/receipt"
                        android:gravity="left|top"
                        android:scaleType="centerInside"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyUpload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="60"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtUpload"


                        style="@style/TextViewStyle.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/bg_screen2"
                        android:drawableLeft="@drawable/ic_file_upload"
                        android:drawablePadding="8dp"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="Upload"
                        android:textColor="@color/white" />


                </LinearLayout>

                <!--/>-->
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
