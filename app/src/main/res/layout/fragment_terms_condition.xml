<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.pb.elite.term.TermsConditionFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Name"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Policy Number"
                    android:textColor="@color/back_button_color" />

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Phone Number"
                    android:textColor="@color/back_button_color" />

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Type Of Service Required"
                    android:textColor="@color/back_button_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="25dp">

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="*RTO Services"
                        android:textColor="@color/back_button_color" />

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="* Health Insurance Services"
                        android:textColor="@color/back_button_color" />

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="* Life Insurance Services"
                        android:textColor="@color/back_button_color" />

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="* Financial Services"
                        android:textColor="@color/back_button_color" />

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="* Other"
                        android:textColor="@color/back_button_color" />

                </LinearLayout>

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Service Request Date"
                    android:textColor="@color/back_button_color" />

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Expected TAT"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Within / On Time"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Out OF TAT"
                    android:textColor="@color/back_button_color" />

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="Reason For Out Of TAT"
                    android:textColor="@color/back_button_color" />

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Customer Comment"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* ServicePerformer Comment"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Any Otht Comment"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* Recommended For Other Products"
                    android:textColor="@color/back_button_color" />

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* If No - Why"
                    android:textColor="@color/back_button_color" />


                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="* If Yes - Name of the product and farwarded to whom in the company "
                    android:textColor="@color/back_button_color" />


            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>
